{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Action": [
                "s3:ListBucket"
            ],
            "Effect": "Allow",
            "Resource": [
                "arn:aws:s3:::<BUCKET NAME>"
            ],
            "Condition": {
                "StringLike": {
                    "s3:prefix": [
                        "${aws:username}/*"
                    ]
                }
            }
        },
        {
            "Action": [
                "s3:GetObject",
                "s3:PutObject"
            ],
            "Effect": "Allow",
            "Resource": [
                "arn:aws:s3:::<BUCKET NAME>/${aws:username}/config.py",
                "arn:aws:s3:::<BUCKET NAME>/${aws:username}/scrapers.py",
                "arn:aws:s3:::<BUCKET NAME>/${aws:username}/scheduleConfig.json",
                "arn:aws:s3:::<BUCKET NAME>/${aws:username}/run_record.json"
            ]
        }
    ]
}